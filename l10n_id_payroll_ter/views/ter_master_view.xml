<odoo>
    <record id="view_hr_payroll_ter_rate_list" model="ir.ui.view">
        <field name="name">hr.payroll.ter.rate.list</field>
        <field name="model">hr.payroll.ter.rate</field> 
        <field name="arch" type="xml">
            <list string="Tarif TER PP 58/2023" editable="bottom">
                <field name="category"/>
                <field name="min_income"/>
                <field name="max_income"/>
                <field name="rate"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_hr_payroll_ter_rate" model="ir.actions.act_window">
        <field name="name">Tarif Efektif (TER)</field>
        <field name="res_model">hr.payroll.ter.rate</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Buat Data Tarif TER baru atau Import dari CSV.
          </p>
        </field>
    </record>

    <menuitem
        id="menu_hr_payroll_ter_rate"
        name="Tarif Efektif (TER)"
        parent="om_hr_payroll.menu_hr_payroll_configuration"
        action="action_hr_payroll_ter_rate"
        sequence="50"/>
</odoo>