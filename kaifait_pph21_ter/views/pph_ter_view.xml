<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_kaifa_pph_ter_tree" model="ir.ui.view">
        <field name="name">kaifa.pph.ter.tree</field>
        <field name="model">kaifa.pph.ter</field>
        <field name="arch" type="xml">
            <list string="Tarif PPh 21 TER" editable="bottom">
                <field name="category"/>
                <field name="min_income" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="max_income" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="rate" widget="percentage"/>
            </list>
        </field>
    </record>

    <record id="action_kaifa_pph_ter" model="ir.actions.act_window">
        <field name="name">Tarif PPh 21 TER</field>
        <field name="res_model">kaifa.pph.ter</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Belum ada data tarif TER.
          </p>
        </field>
    </record>

    <menuitem id="menu_kaifa_pph_ter"
              name="Tarif PPh 21 TER"
              parent="om_hr_payroll.menu_hr_payroll_configuration"
              action="action_kaifa_pph_ter"
              sequence="50"/>
</odoo>